@using WebUi.Models
@using WebUi.HtmlHelpers
@model BooksListViewModel

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

@foreach (var book in Model.Books)
{
    @Html.Partial("_BookSummary", book)
}

<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>